@model IEnumerable<comp4870_assignment_1.Models.Player>

@{
  ViewData["Title"] = $"Team Players";
}

<div>
  <h1 class="display-4">@ViewData["Title"]</h1>
    <table class="table table-striped table-bordered">
    <tr>
      <th>@Html.DisplayNameFor(model => model.jerseyNumber)</th>
      <th>@Html.DisplayNameFor(model => model.person.fullName)</th>
      <th>@Html.DisplayNameFor(model => model.position.name)</th>
      <th></th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.jerseyNumber</td>
        <td>@item.person.fullName</td>
        <td>@item.position.name</td>
        <td style="text-align: center;">
            <a asp-action="Details" asp-route-id="@item.person.id" class="btn btn-sm btn-light">View Player Details</a>
        </td>
      </tr>
      }
  </table>
  
</div>
